{
  "name": "farcaster-indexer",
  "author": "Greg Skriloff",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./dist",
    "stream": "tsc && LOG_LEVEL=debug node ./dist/index.js",
    "dev": "tsc && node ./dist/index.js",
    "backfill": "tsc && node ./dist/index.js --backfill",
    "migrate": "tsc && node ./dist/db/migrator.js",
    "api": "tsc && node ./dist/api/index.js",
    "api:dev": "nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/api/index.ts"
  },
  "dependencies": {
    "@bull-board/api": "^5.20.5",
    "@bull-board/express": "^5.20.5",
    "@farcaster/hub-nodejs": "^0.11.17",
    "bullmq": "^5.7.6",
    "cli-progress": "^3.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "express": "^4.19.2",
    "fastq": "^1.17.1",
    "humanize-duration": "^3.32.1",
    "ioredis": "^5.4.1",
    "kysely": "^0.27.2",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "tiny-typed-emitter": "^2.1.0",
    "viem": "^2.17.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cli-progress": "^3.11.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/humanize-duration": "^3.27.4",
    "@types/node": "^20.11.19",
    "@types/pg-pool": "^2.0.6",
    "nodemon": "^3.1.4",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}